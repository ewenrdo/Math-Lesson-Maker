% Théorème / Propriété
\newcommand{\theorem}[4]{%
  \begin{tcolorbox}[theoremStyle]
    {\color{danger}\textbf{#1 : #2}}%
    \ifthenelse{\equal{#3}{true}}{%
        \ifthenelse{\equal{#1}{Propriété}}{%
            \textit{~(admise)}%
        }{%
            \textit{~(admis)}%
        }%
    }{}%
    \par\vspace{0.5em}#4
  \end{tcolorbox}
}

